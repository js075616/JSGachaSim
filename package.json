{
  "name": "jsgachasim",
  "version": "1.0.0",
  "description": "A simple \"gacha\" game simulator built with the MERN stack.",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "npm start --prefix frontend",
    "test": "jest --detectOpenHandles",
    "testWatch": "jest --watchAll",
    "dev": "concurrently \"npm run server\" \"npm run client\" ",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/js075616/JSGachaSim.git"
  },
  "keywords": [],
  "author": "Jake Schwarz",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/js075616/JSGachaSim/issues"
  },
  "homepage": "https://github.com/js075616/JSGachaSim#readme",
  "dependencies": {
    "bootstrap": "^5.1.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-async-handler": "^1.2.0",
    "mongoose": "^6.3.0"
  },
  "devDependencies": {
    "@babel/plugin-syntax-jsx": "^7.16.7",
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.3",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "supertest": "^6.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
